
    <h1 class="display-4">Welcome</h1>
    @Html.ActionLink("Add New Thread","Create", "Thread", null, new { @Class = "btn btn-primary"})

        @if (Model.Count == 0)
        {
            <p>No threads added</p>
        }
        else
        {

            @foreach (Thread thread in Model)
            {
                <div class="thread">
                    @Html.ActionLink($"{@thread.Title}", "Details", "Thread", new { id = thread.ThreadId }, new { @Class = "thread-link" })
                </div>
            }
        }
