<div class="text-center">
    <h1 class="display-4">Welcome</h1>
    <ul>
        @if (Model.Count == 0)
        {
            <li>No threads added</li>
        }
        else
        {
            @foreach (Thread thread in Model)
            {
                <li>@Html.ActionLink($"{@thread.Title}", "Details", "Thread", new { id = thread.ThreadId }, new { @class = "btn btn-primary" })</li>
            }
        }
    </ul>
</div>