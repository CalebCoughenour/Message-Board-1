@using MessageBoard.Models
@model MessageBoard.Models.Thread

<div class="text-center">
  <h1 class="display-4">@Html.DisplayNameFor(model => model.Title): @Html.DisplayFor(model => model.Title)</h1>
  <ul>
    @if (Model.Posts.Count == 0)
    {
      <li>No posts added</li>
    }
    else
    {
      @foreach (Post post in Model.Posts)
      {
        <li>
          @Html.ActionLink($"{post.Author}", "Details", "Post", new { id = @post.PostId })
          <p>@post.Message</p>
        </li>
      }
    }
  </ul>
</div>
